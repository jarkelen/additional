.content
  .support.form
    %p= I18n.t :mod_ins_settings_add_mediator
    = form_for(@mediator, :remote => true) do |f|
      / Show errors
      = render('layouts/form_errors', :object => @mediator)
      = f.hidden_field :company_id, :value => current_user.company.id
      = render('layouts/form_field', :f => f, :label => I18n.t(:mod_ins_mediator), :field => :mediator, :size => "25")
      .field
        = f.submit I18n.t(:form_save_button), :class => 'button white'
      .clear
  %table
    %thead
      %tr
        %th= I18n.t :mod_ins_mediator
        %th
    %tbody
      - @mediators.each do |mediator|
        %tr
          %td= mediator.mediator
          %td= link_to I18n.t(:delete), mediator, :method => :delete, :remote => true, :data => { :confirm => I18n.t(:sure) }
